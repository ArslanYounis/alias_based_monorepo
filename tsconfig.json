{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@platform/*": ["./mobile/src/ui/*", "./web/src/ui/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "exclude": ["node_modules", "**/dist"]
}

